<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.settings.SettingsFragment">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="36dp"
        android:elevation="10dp"
        android:padding="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card"
            android:padding="10dp">


            <TextView
                android:id="@+id/txtlang"
                android:layout_width="204dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="@string/location"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/radio_button_map"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <RadioButton
                android:id="@+id/radio_button_gps"
                android:layout_width="345dp"
                android:layout_height="66dp"
                android:text="@string/gps"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/radio_button_map"
                app:layout_constraintTop_toBottomOf="@+id/radio_button_map" />

            <RadioButton
                android:id="@+id/radio_button_map"
                android:layout_width="290dp"
                android:layout_height="59dp"
                android:shadowColor="@color/teal_200"
                android:text="@string/map"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.242"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtlang" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginEnd="9dp"

        android:layout_marginRight="9dp"
        android:layout_marginBottom="54dp"
        android:elevation="10dp"
        android:padding="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView3">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card"
            android:gravity="center"
            android:padding="10dp">


            <TextView
                android:id="@+id/textlang"
                android:layout_width="368dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="@string/language"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/ar_btn"
                android:layout_width="345dp"
                android:layout_height="51dp"
                android:text="@string/arabic"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/en_btn"
                app:layout_constraintStart_toStartOf="@+id/en_btn"
                app:layout_constraintTop_toBottomOf="@+id/en_btn" />

            <RadioButton
                android:id="@+id/en_btn"
                android:layout_width="342dp"
                android:layout_height="57dp"
                android:enabled="true"
                android:text="@string/english"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/textlang"
                app:layout_constraintStart_toStartOf="@+id/textlang"
                app:layout_constraintTop_toBottomOf="@+id/textlang" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="53dp"
        android:elevation="10dp"
        android:padding="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView4">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card"
            android:padding="10dp">


            <TextView
                android:id="@+id/text"
                android:layout_width="373dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="@string/temperature"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/k_m"
                android:layout_width="382dp"
                android:layout_height="44dp"
                android:text="@string/kelvin"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/c_m"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/c_m"
                app:layout_constraintTop_toBottomOf="@+id/c_m" />

            <RadioButton
                android:id="@+id/c_m"
                android:layout_width="345dp"
                android:layout_height="44dp"
                android:text="@string/celsius"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/f_ml"
                app:layout_constraintStart_toStartOf="@+id/f_ml"
                app:layout_constraintTop_toBottomOf="@+id/f_ml" />

            <RadioButton
                android:id="@+id/f_ml"
                android:layout_width="344dp"
                android:layout_height="49dp"
                android:text="@string/fahrenheit"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/text"
                app:layout_constraintStart_toStartOf="@+id/text"
                app:layout_constraintTop_toBottomOf="@+id/text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>